{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "paths": {
      "@themarkers/core": ["./packages/core/src"],
      "@themarkers/ui": ["./packages/ui/src"],
      "@themarkers/cli": ["./packages/cli/src"]
    }
  },
  "exclude": ["node_modules"]
}
